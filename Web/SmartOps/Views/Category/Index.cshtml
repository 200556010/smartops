@using SmartOps.Controllers
@{
    var dataTableName = "categoryDataTable";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bordered table</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered" id="@dataTableName">
                        <thead>
                            <tr>
                                <td>#</td>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                            <tr>
                                <td></td>
                                <td><input class="form-control" name="Name" placeholder="Plan Name"></td>
                                <td><input class="form-control" name="Description" placeholder="Description"></td>
                                <td class="text-center">
                                    <a href="javascript:void(0)" class="text-primary text-bold filter-submit">
                                        <i class="fa fa-search"></i>
                                    </a>
                                    &nbsp;|&nbsp;
                                    <a href="javascript:void(0)" class="text-danger text-bold filter-cancel">
                                        <i class="fa fa-times-rectangle"></i>
                                    </a>
                                </td>

                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        var dtTableName = '@dataTableName';
        var listUrl = "@Url.Action(nameof(CategoryController.GetList))";
        var editUrl = "@Url.Action(nameof(CategoryController.Edit), new { id = "$id" })";
    </script>
    <script src="~/js/pages/category.js" asp-append-version="true"></script>
}